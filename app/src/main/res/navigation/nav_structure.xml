<?xml version="1.0" encoding="utf-8"?>
<!--
    NOTA: Este ficheiro é apenas informativo para visualizar a estrutura de navegação do TripSync.
    Não é utilizado diretamente pela app.
    Usamos <fragment> apenas para evitar erros no editor.
-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_structure"
    app:startDestination="@id/loginFragment">

    <activity
        android:id="@+id/loginFragment"
        android:name="com.example.tripsync.activities.LoginActivity"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </activity>

    <activity
        android:id="@+id/registerFragment"
        android:name="com.example.tripsync.activities.RegisterActivity"
        android:label="Registo">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </activity>

    <activity
        android:id="@+id/homeFragment"
        android:name="com.example.tripsync.activities.HomeActivity"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_criar"
            app:destination="@id/criarFragment" />
        <action
            android:id="@+id/action_home_to_editar"
            app:destination="@id/editarFragment" />
        <action
            android:id="@+id/action_home_to_perfil"
            app:destination="@id/perfilFragment" />
    </activity>

    <activity
        android:id="@+id/criarFragment"
        android:name="com.example.tripsync.activities.CriarViagemActivity"
        android:label="Criar Viagem" />

    <activity
        android:id="@+id/editarFragment"
        android:name="com.example.tripsync.activities.EditarViagemActivity"
        android:label="Editar Viagem">
        <action
            android:id="@+id/action_editar_to_fotos"
            app:destination="@id/fotosFragment" />
    </activity>

    <activity
        android:id="@+id/fotosFragment"
        android:name="com.example.tripsync.activities.FotosViagemActivity"
        android:label="Fotos da Viagem" />

    <activity
        android:id="@+id/perfilFragment"
        android:name="com.example.tripsync.activities.EditarPerfilActivity"
        android:label="Editar Perfil" />
</navigation>
