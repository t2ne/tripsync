<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botão Voltar -->
        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Viagem"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Campo Nome da Viagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:paddingBottom="8dp"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nome da Viagem*" />

            <EditText
                android:id="@+id/edtNomeViagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite o nome da viagem"
                android:inputType="text" />
        </LinearLayout>

        <!-- Campo Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data" />

            <EditText
                android:id="@+id/edtData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite a data"
                android:inputType="date" />
        </LinearLayout>

        <!-- Campo Descrição -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descrição" />

            <EditText
                android:id="@+id/edtDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite a descrição"
                android:inputType="text" />
        </LinearLayout>

        <!-- Campo Classificação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classificação" />

            <EditText
                android:id="@+id/edtClassificacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite a classificação"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Adicionando ImageView para a foto -->
        <TextView
            android:text="Foto da Viagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/imgFotoViagem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop" />

        <!-- Botão para selecionar a foto -->
        <Button
            android:id="@+id/btnSelecionarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecionar Foto"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCriar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
